<hgroup class="flex items-start justify-between">
  <h1>Recent posts</h1>

  <% if user_signed_in? %>
    <%= link_to "New post", new_post_path, class: "button" %>
  <% end %>
</hgroup>

<ul id="posts" class="list-none space-y-6">
  <% @posts.each do |post| %>
    <li><%= render post %></li>
  <% end %>
</ul>
